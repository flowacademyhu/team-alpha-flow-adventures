<div>
  {{!-- Upperside of page --}}
  <div class="row upper-text-display ">
    {{!-- Location and field info display --}}
    <div class="col-sm-5 col-sm-offset-2">
      <div class="main-display">
        <p class="warning"></p>
        <p class="field-desc"></p>
        <p class="north-desc"></p>
        <p class="south-desc"></p>
        <p class="east-desc"></p>
        <p class="west-desc"></p>
        <p class="other-message"></p>
      </div>
    </div>
    {{!-- Side button display --}}
    <div class="col-sm-3 text-left">
      <table class="table table-inverse">
    <tr>
    <th>Életerő</th>
    <td><span class="player-health-display"></span></td>
    </tr>
    <tr>
    <th>Támadás</th>
    <td><span class="player-attack-display"></span></td>
    </tr>
    <tr>
    <th>Védelem</th>
    <td><span class="player-defense-display"></span></td>
    </tr>
    <tr>
    <th>Használt tárgy</th>
    <td><span class="player-used-item-display"></span></td>
    </tr>
    <tr>
    <th>Körök száma</th>
    <td><span class="player-rounds-display"></span></td>
    </tr>
    </table>
    </div>
  </div>
  {{!-- Bottom side of page --}}
  <div class="row">
    {{!-- Movement buttons --}}
    <div class="col-sm-2 text-center col-sm-offset-2">
      <button class="btn btn-primary glyphicon glyphicon-menu-up move-north" ></button>
      <div>
      <button class="btn btn-primary glyphicon glyphicon-menu-left eastwest move-west"></button>
      <button class="btn btn-primary glyphicon glyphicon-menu-right eastwest move-east"></button>
      </div>
      <button class="btn btn-primary glyphicon glyphicon-menu-down move-south"></button>
    </div>
    {{!-- Bottom button display --}}
    <div class="col-sm-3">
      <button class="btn btn-danger action-buttons attack">Támadás</button>
      <button class="btn btn-success action-buttons talk">Beszéd</button>
      <button class="btn btn-primary action-buttons pickup">Felvesz</button>
      <button class="btn btn-primary action-buttons use">Használ</button>

      <form action="" class="rest-form">
      <select name="rest" class="rest-dropdown" id="">       
        <option value="1">Pihen 1 kört</option>
        <option value="5">Pihen 5 kört</option>
        <option value="10">Pihen 10 kört</option>
        <option value="15">Pihen 15 kört</option>
      </select>
      <button class="btn btn-primary rest-submit" type="submit">Pihenj!</button>
      </form>
    </div>
    <div class="col-sm-2">
      <button class="btn btn-primary btn-block new-game">Új játék</button>
    </div>
  </div>

</div>