<div>
  {{!-- Upperside of page --}}
  <div class="row upper-text-display">
    {{!-- Location and field info display --}}
    <div class="col-sm-5">
      <p class="warning"></p>
      <p class="field-desc"></p>
      <p class="north-desc"></p>
      <p class="south-desc"></p>
      <p class="east-desc"></p>
      <p class="west-desc"></p>
      <p class="other-message"></p>
    </div>
    {{!-- Side button display --}}
    <div class="col-sm-2 text-left">
      <p>Életerő: <span class="player-health-display"></span></p>
      <p>Támadás: <span class="player-attack-display"></span></p>
      <p>Védelem: <span class="player-defense-display"></span> </p>
      <p>Használt tárgy: <span class="player-used-item-display"></span></p>
    </div>
  </div>
  {{!-- Bottom side of page --}}
  <div class="row">
    {{!-- Movement buttons --}}
    <div class="col-sm-2 text-center">
      <button class="btn btn-primary glyphicon glyphicon-menu-up move-north" ></button>
      <div>
      <button class="btn btn-primary glyphicon glyphicon-menu-left eastwest move-west"></button>
      <button class="btn btn-primary glyphicon glyphicon-menu-right eastwest move-east"></button>
      </div>
      <button class="btn btn-primary glyphicon glyphicon-menu-down move-south"></button>
    </div>
    {{!-- Bottom button display --}}
    <div class="col-sm-3">
      <button class="btn btn-danger action-buttons attack">Támadás</button>
      <button class="btn btn-success action-buttons talk">Beszéd</button>
      <button class="btn btn-primary action-buttons pickup">Felvesz</button>
      <button class="btn btn-primary action-buttons">Használ</button>

      <form class="rest-form" action="">
      <select name="rest" id="">
        <option value="">Pihenés értéke</option>        
        <option value="">Pihen 5 kört</option>
        <option value="">Pihen 10 kört</option>
        <option value="">Pihen 15 kört</option>
      </select>
      <button class="btn btn-primary" type="submit">Pihenj!</button>
      </form>
    </div>
    <div class="col-sm-2">
      <button class="btn btn-primary btn-block new-game">Új játék</button>
      <button class="btn btn-primary btn-block">Hátizsák</button>
      <button class="btn btn-primary btn-block">Iránytű</button>
    </div>
  </div>

</div>